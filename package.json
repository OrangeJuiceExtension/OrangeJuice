{
	"name": "orangejuice",
	"description": "Orange Juice makes HackerNews sweeter",
	"private": true,
	"version": "0.18.1",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"docs": "mkdir -p public && cp -r docs/* public/ && cp -r assets public/",
		"build": "wxt build",
		"build-watch": "chokidar --initial --silent \"src/**/*\" -c \"bun run build\"",
		"build:firefox": "wxt build -b firefox",
		"icons": "bun run scripts/generate-icons.ts",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"test": "vitest",
		"ci": "CI=true bun run test && bun run build && bun run zip && bun run zip:firefox"
	},
	"dependencies": {
		"@wxt-dev/storage": "^1.2.6",
		"comctx": "^1.6.0",
		"dompurify": "^3.3.1",
		"fit-textarea": "^3.0.0",
		"linkify-html": "^4.3.2",
		"linkifyjs": "^4.3.2",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tailwindcss": "^4.1.18",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@playwright/test": "^1.58.1",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/dom": "^10.4.1",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@wxt-dev/browser": "^0.1.32",
		"@wxt-dev/module-react": "^1.1.5",
		"chokidar-cli": "^3.0.0",
		"globals": "^17.3.0",
		"happy-dom": "^20.4.0",
		"oxipng": "^1.0.1",
		"playwright": "^1.58.1",
		"sharp": "^0.34.5",
		"typescript": "^5.9.3",
		"ultracite": "7.1.1",
		"vitest": "^4.0.18",
		"vitest-localstorage-mock": "^0.1.2",
		"wxt": "^0.20.13"
	},
	"trustedDependencies": [
		"spawn-sync"
	]
}
