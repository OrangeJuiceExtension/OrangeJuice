{
	"name": "orangejuice",
	"description": "Orange Juice makes HackerNews sweeter",
	"private": true,
	"version": "0.22.25",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build-watch": "chokidar --initial --silent \"src/**/*\" -c \"bun run build\"",
		"build:firefox": "wxt build -b firefox",
		"icons": "bun run scripts/generate-icons.ts",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"test": "vitest",
		"ci": "CI=true bun run --parallel check test build && bun run clean && CI=true bun run --parallel zip zip:firefox",
		"check": "ultracite check",
		"fix": "ultracite fix",
		"prepare": "lefthook install",
		"clean": "rm -rf .output build-docs playwright-report"
	},
	"dependencies": {
		"@wxt-dev/storage": "^1.2.7",
		"beautiful-mermaid": "^0.1.3",
		"comctx": "^1.6.1",
		"dompurify": "^3.3.1",
		"fit-textarea": "^3.0.0",
		"linkify-html": "^4.3.2",
		"linkifyjs": "^4.3.2",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tailwindcss": "^4.1.18",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.15",
		"@playwright/test": "^1.58.2",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/dom": "^10.4.1",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@wxt-dev/browser": "^0.1.36",
		"@wxt-dev/module-react": "^1.1.5",
		"chokidar-cli": "^3.0.0",
		"globals": "^17.3.0",
		"happy-dom": "^20.6.1",
		"lefthook": "^2.1.1",
		"oxipng": "^1.0.1",
		"playwright": "^1.58.2",
		"postcss": "^8.5.6",
		"postcss-preset-env": "^11.1.3",
		"sharp": "^0.34.5",
		"typescript": "^5.9.3",
		"ultracite": "7.2.0",
		"vitest": "^4.0.18",
		"vitest-localstorage-mock": "^0.1.2",
		"wxt": "^0.20.17"
	},
	"trustedDependencies": [
		"spawn-sync"
	]
}
